{   
    //Set default terminal to use Visual Studio Environment
    "terminal.integrated.defaultProfile.windows": "Developer Command Prompt for VS 2022",
    "terminal.integrated.profiles.windows": {
        "Developer Command Prompt for VS 2022": {
        "path": "cmd.exe",
        "args": [
            "/k",
            "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Auxiliary/Build/vcvars64.bat"
        ]
    }
    },

    //Enable signed git commits.
    "git.alwaysSignOff": true,

    //Cmake Tools bar.
    "cmake.options.statusBarVisibility": "visible",

    //Configuring/Build Settings
    "cmake.automaticReconfigure": false,
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "cmake.buildBeforeRun": false,

    //Prevent folder changes that mess up Build, and Run commands.
    "cmake.autoSelectActiveFolder": false
}